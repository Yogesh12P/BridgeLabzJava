package com.BridgeLabz.LoginForm.validate;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.BridgeLabz.LoginForm.model.User;

public class ValidateEntry 
{
	public boolean validateUser(User newUser, HttpServletRequest request, HttpServletResponse response  )
	{
		boolean result = false;
		
			if(newUser.getFirstName()!=null)
			{
				if(newUser.getLastName()!=null)
				{
					if (newUser.getEmail()!=null) 
					{
						if(newUser.getPassword()!=null)
						{
							if(newUser.getMobileNo()!=null)
							{
								
							}else
							{
								request.setAttribute("error1", "Please enter Mobile no");
							}
						}else
						{
							request.setAttribute("error1", "please enter password");
						}
					}
					else 
					{
						request.setAttribute("eerror", "please enter Email");
					}
				}else
				{
					request.setAttribute("lerror", "Please Enter last name");
				}
			}
			else
			{
				request.setAttribute("ferror", "please enter first name");
			}
		return result;
	}
}
